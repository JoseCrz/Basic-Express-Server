<%- include('../includes/navbar.ejs') %>
<% if (orders.length <= 0) { %>
    <h1>Nothing here yet.</h1>
<% } else { %>
    <ul>
        <% orders.map(order => { %>
            <li>
                <h1>Order #<%= order.id %> </h1>
                <ul>
                    <% order.products.map(product => { %>
                        <li><%= product.title %> (<%= product.orderItem.quantity %>) </li>
                    <% }) %>
                </ul>
            </li>
        <% }) %>
    </ul>

<% } %>

